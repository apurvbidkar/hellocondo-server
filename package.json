{
  "name": "@condo-server/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "npx nx run-many --target=build",
    "postbuild": "node copy-dockerfiles.js",
    "add:db-models": "npx nx run db-models:build && cd dist/shared/db-models/ && yalc publish --private && cd ../../../ && yalc add @condo-server/db-models",
    "remove:db-models": "yalc remove @condo-server/db-models",
    "update:db-models": "npm run remove:db-models && npm run add:db-models",
    "add:notification-engine": "npx nx run notification-engine:build && cd dist/shared/notification-engine/ && yalc publish --private && cd ../../../ && yalc add @condo-server/notification-engine",
    "remove:notification-engine": "yalc remove @condo-server/notification-engine",
    "update:notification-engine": "npm run remove:notification-engine && npm run add:notification-engine",
    "install-migrations-dependencies": "cd shared/db-migrations && npm install && cp .env.example .env",
    "migrate": "cd shared/db-migrations && npx sequelize-cli db:migrate",
    "migrate:undo": "cd shared/db-migrations && sequelize db:migrate:undo",
    "install:private-packages": "npm run add:db-models && npm run add:notification-engine",
    "update:private-packages": "npm run update:db-models && npm run update:notification-engine"
  },
  "private": true,
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.583.0",
    "@aws-sdk/client-s3": "^3.583.0",
    "@aws-sdk/client-ses": "^3.583.0",
    "@turf/helpers": "^7.0.0",
    "@turf/turf": "^7.0.0",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "~4.18.1",
    "geolib": "^3.3.4",
    "handlebars": "^4.7.8",
    "http-errors": "^2.0.0",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.5",
    "lodash": "^4.17.21",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "proj4": "^2.11.0",
    "qs": "^6.12.1",
    "sequelize": "^6.37.3",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nx/esbuild": "18.3.4",
    "@nx/eslint": "18.3.4",
    "@nx/eslint-plugin": "18.3.4",
    "@nx/js": "18.3.4",
    "@nx/node": "18.3.4",
    "@nx/workspace": "18.3.4",
    "@swc-node/register": "~1.8.0",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@types/cors": "^2.8.17",
    "@types/express": "~4.17.13",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/jwk-to-pem": "^2.0.3",
    "@types/lodash": "^4.17.5",
    "@types/node": "~18.16.9",
    "@types/pg": "^8.11.6",
    "@types/sequelize": "^4.28.20",
    "@typescript-eslint/eslint-plugin": "^7.3.0",
    "@typescript-eslint/parser": "^7.3.0",
    "esbuild": "^0.19.2",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "nx": "18.3.4",
    "prettier": "^2.6.2",
    "typescript": "~5.4.2"
  }
}
